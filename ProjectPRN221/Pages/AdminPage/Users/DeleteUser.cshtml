@page "{id:int}"
@model ProjectPRN221.Pages.AdminPage.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Delete User</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5>Are you sure you want to delete this user?</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Name</label>
                                    <p>@Model.User.Fullname</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    <p>@Model.User.Email</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Role</label>
                                    <p>@Model.User.Role</p>
                                </div>
                            </div>
                        </div>
                        <form method="post">
                            <input type="hidden" asp-for="User.UserId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a href="@Url.Page("CustomerManagement")" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
