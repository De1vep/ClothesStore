@page
@model ProjectPRN221.Pages.AdminPage.Users.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-3">Customer List</h4>
                        <p class="mb-0">
                            A customer dashboard lets you easily gather and visualize customer data for optimizing
                            the customer experience and ensuring customer retention.
                        </p>
                    </div>
                    <a href="/AdminPage/Users/Create" class="btn btn-primary add-list"></i>Add Customer</a>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="table-responsive rounded mb-3">
                    <table class="data-table table mb-0 tbl-server-info">
                        <thead class="bg-white text-uppercase">
                            <tr class="ligth ligth-data">
                                <th>
                                    <div class="checkbox d-inline-block">
                                        <input type="checkbox" class="checkbox-input" id="checkbox1">
                                        <label for="checkbox1" class="mb-0"></label>
                                    </div>
                                </th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="ligth-body">
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>
                                        <div class="checkbox d-inline-block">
                                            <input type="checkbox" class="checkbox-input" id="checkbox2">
                                            <label for="checkbox2" class="mb-0"></label>
                                        </div>
                                    </td>
                                    <td>@user.Fullname</td>
                                    <td>@user.Email</td>
                                    <td>
                                        <div class="d-flex align-items-center list-action">
                                        <a class="badge badge-info mr-2" data-toggle="tooltip" data-placement="top" title="View" href="/AdminPage/Users/DetailUser/@user.UserId">Detail</a>
                                        <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title="Edit" href="/AdminPage/Users/Edit?id=@user.UserId">Edit</a>
                                        <a class="badge bg-warning mr-2" data-toggle="tooltip" data-placement="top" title="Delete" href="/AdminPage/Users/DeleteCustomer?id=@user.UserId">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
