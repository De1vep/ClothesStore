<script>
    document.addEventListener('DOMContentLoaded', function () {
        const tabs = document.querySelectorAll('.prod-tab__item');
        const contents = document.querySelectorAll('.prod-tab__content');

        tabs.forEach((tab, index) => {
            tab.addEventListener('click', function () {
                // Remove current class from all tabs and contents
                tabs.forEach(tab => tab.classList.remove('prod-tab__item--current'));
                contents.forEach(content => content.classList.remove('prod-tab__content--current'));

                // Add current class to the clicked tab and corresponding content
                tab.classList.add('prod-tab__item--current');
                contents[index].classList.add('prod-tab__content--current');
            });
        });
    });
</script>