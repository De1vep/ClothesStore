                                                <h4 class="prod-prop__title">Pickup</h4>
                                                <p class="prod-prop__desc">Out of 2 store, today</p>
                                            </div>
                                        </div>
                                        <div class="prod-info__card">
                                            <div class="prod-info__row">
                                                <span class="prod-info__price">$@Html.DisplayFor(model => model.Product.Price)</span>
                                            </div>
                                            <div class="prod-info__row">
                                                <a href="/Carts/AddToCart/@Model.Product.ProductId" class="btn btn--primary prod-info__add-to-cart">
                                                    Add to cart
                                                </a>
                                                <button class="like-btn prod-info__like-btn">
                                                    <img src="~/assets/icons/heart.svg"
                                                         alt=""
                                                         class="like-btn__icon icon" />
                                                    <img src="~/assets/icons/heart-red.svg"
                                                         alt=""
                                                         class="like-btn__icon--liked" />
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </form>
