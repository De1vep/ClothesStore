@page
@model ProjectPRN221.Pages.Carts.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Grocery Mart</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/main.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Delete Cart Item</h1>
        <h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
        <div class="mt-4">
            <h4>Cart</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Cart.Quantity)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Cart.Quantity)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Cart.Product)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Cart.Product.ProductName)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Cart.User)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Cart.User.Fullname)</dd>
            </dl>
            <form method="post" class="text-center">
                <input type="hidden" asp-for="Cart.CartId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
